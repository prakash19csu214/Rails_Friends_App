<div class="jumbotron">
  <h1 class="display-4"><%= @friends_record.first_name %> <%= @friends_record.last_name %></h1>
  <p class="lead"><%= @friends_record.email %> | <%= @friends_record.twitter %> | <%= @friends_record.phone %></p>
  <hr class="my-4">
  <%= link_to 'Edit', edit_friends_record_path(@friends_record), class:"btn btn-secondary" %> |
  <%= link_to 'Delete', @friends_record, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %> |
<%= link_to 'Back', friends_records_path, class:"btn btn-secondary" %>
</div>